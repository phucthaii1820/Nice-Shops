<div class="flex max-w-screen-lg mx-auto justify-between items-center my-10 p-5 bg-gray-100">
    <div class="flex">
        <div class="avatar max-w-max flex-none"><img class="object-cover w-24 h-24" alt="No alt"
                src="data:image/jpeg;base64,{{Image.[0]}}" /></div>
        <div class="title flex-initial p-2 flex flex-col">
            <span class="text-base not-italic">{{title}}</span>
            <div class="flex flex-row">
                <p class="text-red-500 text-base font-bold price"> Giá: &nbsp;</p>
                <p class="text-red-500 text-base font-bold price" id="{{_id}}">{{price}} &nbsp;</p>
                <p class="text-red-500 text-base font-bold price">VNĐ</span>
            </div>
            <a href="/hiddenPost/{{_id}}" class="bg-cyan-700 p-2 max-w-max text-white font-bold hover:bg-cyan-500">Hidden</a>
        </div>
    </div>
    <div class="edit">
        <a href="/updatePost/{{_id}}" class="flex items-center text-secondary px-2 text-black justify-end text-3xl">
