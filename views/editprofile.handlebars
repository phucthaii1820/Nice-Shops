<div class="m-auto" style="width:700px">
    <div class="text-2xl text-yellow-500 border-b pb-4">Thông tin cá nhân</div>
    <div class="flex md:flex-row flex-col w-full mt-4">
        <div class="w-44 h-44 rounded-full overflow-hidden">
            <img src="https://herrmans.eu/wp-content/uploads/2019/01/765-default-avatar.png"></img>
        </div>
        <div class="w-full">
            <form class="pl-10">
                <div>Họ và tên</div>
                <input class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-3" type="text" id="name">
                <div>Số điện thoại</div>
                <input class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-3" type="number" id="phone">
                <div>Email</div>
                <input class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-3" type="email" id="email">
                <div>Địa chỉ</div>
                <input class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-3" type="text" id="address">
                <div>Số CMND/Thẻ căn cước</div>
                <input class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-3" type="number" id="CMND">
                <div>Giới tính</div>
                <select class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-3">
                    <option>Chưa có thông tin</option>
                    <option>Nam</option>
                    <option>Nữ</option>
                    <option>Giới tính khác</option>
                </select>
                <div>Ngày sinh</div>
                <input class="bg-gray-200 w-full focus:outline-none px-2 rounded-md mb-5" type="text" id="dob">
                <button class="bg-yellow-500 text-white rounded-lg text-md py-2 w-full" type="button">Lưu thay đổi</button>
            </form>
        </div>
    </div>
</div>