<div class="container mx-auto pt-4 pb-12">

    <nav id="store" class="w-full z-0 top-0 px-6 py-1">
        <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-3">
            <div></div>
            <div class="flex items-center" id="store-nav-content">

                <a class="pl-3 inline-block no-underline hover:text-black" href="#">
                    <svg class="fill-current hover:text-black" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                        viewBox="0 0 24 24">
                        <path d="M7 11H17V13H7zM4 7H20V9H4zM10 15H14V17H10z" />
                    </svg>
                </a>

            </div>
        </div>
    </nav>

    <div class="flex">
        {{#each this.postData}}
            {{> product}}
        {{/each}}
    </div>


    <nav class="flex flex-row-reverse mr-3 mt-16 items-center space-x-1" aria-label="Page navigation example">
        <ul class="inline-flex -space-x-px">
            {{#each this.page_numbers}}
                {{#if isCurrent}}
                    <li>
                        <a href="#" class="ml-1 px-4 py-2 text-gray-700 bg-blue-400 rounded-md hover:bg-blue-400 hover:text-white">
                            {{value}}
                        </a>
                    </li>
                {{else}}
                    <li>
                        <a href="?page={{value}}" class="ml-1 px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-blue-400 hover:text-white">
                        {{value}}
                        </a>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </nav>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.price').each(function () {
            let id = "#" + $(this).attr('id');
            let value = addCommas($(id).text());
            $(id).text(value);
        });
    });
    function addCommas(str) {
        return str.replace(/^0+/, '').replace(/\D/g, "").replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    }
</script>