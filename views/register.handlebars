<div class="m-auto flex flex-col w-96 shadow-2xl border-2 rounded-md bg-gray-50">
    <div class="px-5 py-14">
        {{#if error}}
          <p class="text-red-600 text-xl mb-3">{{error}}</p>
        {{/if}}
        <form method="post" action="/register" class="mb-3 text-sm">
            <p class="mb-4 text-2xl text-yellow-500">Đăng ký</p>
            <label for="phone"></label>
            <input name="phone" class="focus:outline-none border-t border-b border-l border-r p-2 w-full rounded-lg mb-4" type="tel"
                placeholder="Nhập SĐT của bạn" autocomplete="off">
            <div class="border-t border-b border-l border-r p-2 w-full rounded-lg flex flex-row mb-4 bg-white">
                <label for="password"></label>
                <input name="password" class="focus:outline-none w-full" type="password" autocomplete="nope" placeholder="Tạo một mật khẩu có ít nhất 5 ký tự">
                <button type="button">Hiện</button>
            </div>
            <button class="bg-yellow-500 text-white rounded-lg text-md py-2 w-full" type="submit">Đăng ký</button>
        </form>
        <div class="flex flex-col text-center">
            <div class="mt-10">hoặc sử dụng</div>
            <div class="mx-auto mb-3">
                <div class="w-max cursor-pointer rounded-full shadow-lg">
                    <img src="https://static.chotot.com/storage/assets/LOGIN/google.svg">
                </div>
            </div>
            <div>
                <div>Bạn đã có tài khoản? <a class="text-blue-900" href="/login">Đăng nhập ngay</a></div>
            </div>
        </div>
    </div>
</div>